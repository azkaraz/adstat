# Основные настройки
PROJECT_NAME=Ads Statistics Dashboard
VERSION=1.0.0
API_V1_STR=/api/v1

# База данных
DATABASE_URL=postgresql://user:password@localhost/ads_stat

# JWT токены
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook

# Google Sheets
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://azkaraz.github.io/adstat/google-oauth-callback

# VK
VK_REDIRECT_URI=https://azkaraz.github.io/adstat/vk-oauth-callback

# Redis
REDIS_URL=redis://localhost:6379

# CORS
ALLOWED_HOSTS=["http://localhost:3000", "http://localhost:8000"]

# Загрузка файлов
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760 